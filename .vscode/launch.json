{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "üêõ Debug",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "main:app",
          "--host", "0.0.0.0",
          "--port", "8000",
          "--reload"
        ],
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "justMyCode": false,
        "stopOnEntry": false
      },
      {
        "name": "üß™ Debug Tests",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "args": [
          "test/",
          "-v",
          "--tb=short"
        ],
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "justMyCode": false,
        "stopOnEntry": false
      },
      {
        "name": "üß™ Debug Current Test File",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "args": [
          "${file}",
          "-v",
          "--tb=short"
        ],
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "justMyCode": false,
        "stopOnEntry": false
      }
    ]
}  